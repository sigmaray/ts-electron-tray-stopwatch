{
  "name": "electron-tray-stopwatch",
  "version": "1.0.0",
  "description": "Electron stopwatch app with system tray",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build && ELECTRON_DISABLE_SANDBOX=1 electron --no-sandbox .",
    "dev": "npm run build && ELECTRON_DISABLE_SANDBOX=1 electron --no-sandbox .",
    "devm": "npm run build && ELECTRON_DISABLE_SANDBOX=1 ALLOW_ONLY_ONE_INSTANCE=false electron --no-sandbox .",
    "build": "tsc && cp src/index.html dist/index.html",
    "typecheck": "tsc --noEmit",
    "build:electron": "electron-builder --publish never",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "canvas": "^3.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.27",
    "@playwright/test": "^1.40.0",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.electron.stopwatch",
    "productName": "Stopwatch",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility"
    },
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.utilities"
    }
  }
}

